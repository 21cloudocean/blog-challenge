<%- include("partials/header") -%>
      <h1><%= pageTitle %></h1>
      <p><%= pageContent %> </p>


<% posts.forEach(function(post){%>
<h1><%= post.title%></h1>
<% if (post.post.length > 100) { %>
  <p>
  <%= post.post.substr(0, 100) + "..."%>
  <a href="/posts/<%= post.title%>">Read More </a>
  </p>
<%} else { %>
<p>  <%= post.post %>  </p>
<%} %>
<% });%>

<%- include("partials/footer") -%>
